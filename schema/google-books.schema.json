{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/somnath4/cs598-fdc-literary-awards/schema/google-books.schema.json",
  "title": "Google Books Dataset",
  "description": "Schema for Google Books API data collection",
  "type": "object",
  "required": ["metadata", "books"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Collection-level metadata",
      "properties": {
        "source": {
          "type": "string",
          "const": "Google Books API"
        },
        "fetch_date": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of data collection"
        },
        "year_range": {
          "type": "string",
          "description": "Publication year range queried"
        },
        "total_books": {
          "type": "integer",
          "description": "Number of books in collection"
        }
      }
    },
    "books": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/GoogleBook"
      }
    }
  },
  "$defs": {
    "GoogleBook": {
      "type": "object",
      "required": ["title", "google_books_id"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Book title"
        },
        "authors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of author names"
        },
        "publisher": {
          "type": ["string", "null"],
          "description": "Publisher name"
        },
        "published_date": {
          "type": ["string", "null"],
          "description": "Publication date (format varies: YYYY, YYYY-MM, YYYY-MM-DD)"
        },
        "year": {
          "type": ["integer", "null"],
          "minimum": 2020,
          "maximum": 2025,
          "description": "Publication year extracted from published_date"
        },
        "categories": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Subject categories assigned by Google Books"
        },
        "page_count": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Number of pages"
        },
        "language": {
          "type": ["string", "null"],
          "description": "ISO 639-1 language code"
        },
        "isbn_10": {
          "type": ["string", "null"],
          "pattern": "^[0-9X]{10}$",
          "description": "ISBN-10 identifier"
        },
        "isbn_13": {
          "type": ["string", "null"],
          "pattern": "^[0-9]{13}$",
          "description": "ISBN-13 identifier"
        },
        "google_books_id": {
          "type": "string",
          "description": "Google Books volume ID (primary identifier)"
        }
      }
    }
  }
}

